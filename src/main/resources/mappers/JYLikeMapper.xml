<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.human.dalligo.dao.community.JYLikeDAO">

	<select id="isLikedByUserId" parameterType="com.human.dalligo.vo.community.JYLikeVO" resultType="int">
		SELECT COUNT(*) FROM post_likes WHERE post_id = #{postId} AND user_id = #{userId}
	</select>
	
	<insert id="insertLike" parameterType="com.human.dalligo.vo.community.JYLikeVO">
		INSERT INTO post_likes (post_id, user_id) VALUES (#{postId}, #{userId})
	</insert>
	
	<delete id="deleteLike" parameterType="com.human.dalligo.vo.community.JYLikeVO">
		DELETE FROM post_likes where post_id = #{postId} AND user_id = #{userId}
	</delete>
	
	<select id="selectCountLikes" parameterType="int" resultType="int">
		SELECT COUNT(*) FROM post_likes WHERE post_id = #{postId}
	</select>

</mapper>