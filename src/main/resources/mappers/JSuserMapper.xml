<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.dalligo.dao.user.JSUserDAO">

    <resultMap id="UserResult" type="com.human.dalligo.vo.user.JSUserVO">
        <id property="id" column="id" />
        <result property="userId" column="user_id"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="nickName" column="nick_name"/>
        <result property="address" column="address"/>
        <result property="phone" column="phone"/>			
        <result property="isAdmin" column="is_admin"/>
    </resultMap>
  <!-- 회원가입 -->
    <insert id="insert" parameterType="com.human.dalligo.vo.user.JSUserVO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user
        VALUES (default, #{userId}, #{password}, #{name}, #{nickName}, #{address}, #{phone}, default)
    </insert>
    <!-- 아이디 조회 -->
    <select id="getUserByUserId" parameterType="string" resultMap="UserResult">
        SELECT * FROM user WHERE user_id = #{userId}       
    </select>

    <!-- 닉네임 조회 -->
    <select id="getUserByNickName" parameterType="string" resultMap="UserResult">
        SELECT * FROM user WHERE nick_name = #{nickName}       
    </select>
	 <update id="updateUser" parameterType="com.human.dalligo.vo.user.JSUserVO">
        UPDATE user
        SET password = #{password},
            name = #{name},
            nick_name = #{nickName},
            address = #{address},
            phone = #{phone}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteUser" parameterType="string">
        DELETE FROM user WHERE user_id = #{userId}
    </delete>
</mapper>
