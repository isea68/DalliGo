<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.human.DalliGO.dao.UserDAO">
	<resultMap id="DetailResult" type="com.human.DalliGO.vo.UserVO">
		<!-- mapping  수동으로 하면 됩니다-->
		<id property="id" column="id" />  <!-- 기본키 -->
		<result property="userId" column="user_id"/> <!-- 일반컬럼-->
		<result property="password" column="password"/>
		<result property="name" column="name"/>
		<result property="nickName" column="nick_name"/>
		<result property="address" column="address"/>
		<result property="phone" column="phone"/>			
		<result property="isAdmin" column="is_admin"/>
	
	</resultMap>
		
		<insert id="insert" parameterType="com.human.DalliGO.vo.UserVO"
	useGeneratedKeys="true" keyProperty="id">
	<!-- mysql, maria db 에서 이렇게 사용한다
	     oracle 은 사용할 수 없다. 사용하려면 작업이 더 들어가서 사용안함
	     oracle은 selectKey를 사용한다. 
	     mysql는 컬럼에 auto_increment라는 옵션을 주고
	     oracle은 시퀀를 별도 생성해서 xxx.nextval 을 사용하는 
	     구조적인 특징 때문에.. -->
		insert into user values 
		(default, #{userId},#{password},#{name},#{nickName},#{address},#{phone},default)
	</insert>	
</mapper>









